{% extends 'templates/base.html.twig' %}

{% block title %}Admin | Edit User{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h2><span class="glyphicon glyphicon-user"></span> Edit User</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8 pull-left">
                <form class="form-horizontal" id="addUserForm" role="form" method="post" action="{{ urlFor('admin.saveUser') }}">
                    <div class="form-group">
                        <input type="hidden" name="userId" id="userId" value="{{ user.id_user }}" />
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="email">Email</label>
                        <div class="col-sm-8">
                        <input type="text" class="form-control" name="email" id="email" placeholder="Enter email" value="{{ user.email }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="firstName">First Name</label>
                        <div class="col-sm-8">
                        <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Enter first name" value="{{ user.first_name }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="lastName">Last Name</label>
                        <div class="col-sm-8">
                        <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Enter last name" value="{{ user.last_name }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="major">Major</label>
                        <div class="col-sm-8">
                        <input type="text" class="form-control" name="major" id="major" placeholder="Enter major" value="{{ user.major }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4"  style="padding-top:0px;" for="password">Password</label>
                        <div class="col-sm-8">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Enter password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="confirmPassword">Confirm Password</label>
                        <div class="col-sm-8">
                        <input type="password" class="form-control" name="confirmpassword" id="confirmpassword" placeholder="Confirm password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="advisor">Advisor</label>
                        <div class="col-sm-3">
                        <select name="advisor" class="form-control" id="advisor">
                            <option value="">None</option>}
                            {% for advisor in advisors %}
                            <option value="{{ advisor.id_user }}"{% if user.advisor.id_user == advisor.id_user %} selected{% endif %}>{{ advisor.last_name }}, {{ advisor.first_name }}</option>
                            {% endfor %}
                        </select>
                        </div>
                        <label class="control-label col-sm-2" style="padding-top:0px;" for="roles">Roles</label>
                        <div class="col-sm-3">
                        <select name="roles[]" class="form-control" id="roles" size="3" multiple>
                            {% for role in roles %}
                            <option value="{{ role.id_role }}"{{ user.hasRole(role.name) ? ' selected' : '' }}>{{ role.name }}</option>
                            {% endfor %}
                        </select>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="col-sm-offset-9 col-sm-3">
                            <div class="btn-toolbar pull-right" role="toolbar">
                                <a href="{{ urlFor('admin.users') }}" role="button" class="btn btn-danger">Cancel</a>
                                <button type="submit" class="btn btn-success" id="submit">Save</button>
                            </div>
                        </div>                         
                    </div>
                </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
{% endblock %}
