{% extends 'templates/base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h2>Admin Page</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <table id="grid-selection" class="table table-condensed table-hover table-striped" data-selection="true" data-multi-select="true" data-row-select="true" data-toggle="bootgrid" data-keep-selection="true">
                    <thead>
                        <tr>
                            <th data-column-id="id" data-identifier="true" data-type="numeric" data-align="left" data-width="40">ID</th>
                            <th data-column-id="last_name" data-sortable="true" data-order="asc" data-header-align="left">Last Name</th>
                            <th data-column-id="first_name" data-sortable="true" data-header-align="left">First Name</th>
                            <th data-column-id="email" data-sortable="true" data-css-class="cell" data-header-css-class="column" data-filterable="true">Email</th>
                            <th data-column-id="major" data-sortable="true">Major</th>
                            <th data-column-id="advisor" data-sortable="true">Advisor</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{ user.id_user }}</td>
                            <td>{{ user.last_name }}</td>
                            <td>{{ user.first_name }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.major }}</td>
                            <td>
                                {% if user.advisor.id_user %}{{ user.advisor.last_name }}, {{ user.advisor.first_name }}{% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
    </div>
</div>



{% endblock %}
