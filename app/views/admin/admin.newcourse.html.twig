{% extends 'templates/base.html.twig' %}

{% block title %}Admin | New Course{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line"><span class="glyphicon glyphicon-book"></span> Add New Course</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
                <form class="form-horizontal" id="addCourseForm" role="form" method="post" action="{{ urlFor('admin.saveCourse') }}">
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="email">Name</label>
                        <div class="col-sm-8">
                        <input type="text" class="form-control" name="name" id="name" placeholder="Enter course name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="firstname">Description</label>
                        <div class="col-sm-8">
                        <textarea class="form-control" rows="3" name="description" id="description" placeholder="Enter description"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" style="padding-top:0px;" for="coordinator">Coordinator</label>
                        <div class="col-sm-3">
                        <select name="coordinator" class="form-control" id="coordinator">
                            <option value="">None</option>
                            {% for coordinator in coordinators %}
                            <option value="{{ coordinator.id_user }}">{{ coordinator.last_name }}, {{ coordinator.first_name }}</option>
                            {% endfor %}
                        </select>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="col-sm-offset-9 col-sm-3">
                        <div class="btn-toolbar pull-right" role="toolbar">
                            <a href="{{ urlFor('admin.users') }}" role="button" class="btn btn-danger">Cancel</a>
                            <button type="submit" class="btn btn-success" id="submit">Save</button>
                        </div>
                        </div>                         
                    </div>
                </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
{% endblock %}
