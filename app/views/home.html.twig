{% extends 'templates/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        {% if auth %}
        <div class="col-sm-3" style="max-height: 550px;overflow-y: scroll;padding:0;margin:0;padding:0;">
            <div class="panel panel-default">
                <table class="table table-hover">
                    <tbody>
                            <tr>
                                <td style="padding-left:35px;"><a href="#"><span class="fa fa-list-alt"></span> <a href="#"> My Submissions</a></a></td>
                                <td style="padding-right:30px;" class="text-right text-nowrap"><span class="badge pull-right">32</span></td>
                            </tr>
                    </tbody>
                </table>
            </div>
            {% if auth.hasRole('ADVISOR') %}
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <span class="panel-title"><span class="glyphicon glyphicon-user"></span> My Personal Queues</span>
                    <div class="btn-group pull-right">
                    <a href="{{ urlFor('addqueue', {'type': 'user', 'id': auth.id_user}) }}" role="button" class="btn btn-default btn-xs"><span class="fa fa-plus fw"></span></a>
                    </div>           
                </div>
                <table class="table table-condensed table-hover">
                    <tbody>
                        {% for uq in userqueues %}
                            <tr>
                                <td style="padding-left:35px;"><a href="#"><span class="fa fa-list-alt"></span> {{ uq.name }}</a></td>
                                <td style="padding-right:30px;" class="text-right text-nowrap"><span class="badge pull-right">12</span></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}
            {% if auth.hasRole('INSTRUCTOR') %}
                    <div class="panel panel-default">
                        <div class="panel-heading clearfix">                            
                            <span class="panel-title"><span class="fa fa-book fa-lg"></span> My Course Queues</span>
                        </div>
                        <table class="table table-condensed table-hover">
                            <tbody>
                            {% for course in mycourses %}
                            <tr class="bg-info">
                                <td>{{ course.name }}</td>
                                <td class="text-right text-nowrap">
                                    <a href="{{ urlFor('addqueue', {'type': 'course', 'id': course.id_course}) }}" role="button" class="btn btn-xs btn-default"><span class="fa fa-plus fw"></span></a>
                                </td>
                            </tr>
                            {% if course.queues|length > 0 %}
                                {% for cq in course.queues %}
                                    {% if cq.is_enabled %}
                                    <tr>                                
                                        <td style="padding-left:35px;">
                                            <a href="#"><span class="fa fa-list-alt"></span> {{ cq.name }}</a>
                                        </td>
                                        <td class="text-right text-nowrap">
                                            <span class="badge">12</span>
                                            <a href="#" role="button" class="btn btn-xs btn-default"><span class="fa fa-cog fw"></span></a>
                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                            <tr>
                                <td colspan="2" style="padding-left:35px;">No active queues for this course</td>
                            </tr>
                            {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
            {% endif %}
        </div>
        {% endif %}
        <div class="col-md-{{ auth ? 9 : 12 }}">
            <h1 class="page-head-line">Welcome to Steven's Document Workflow Management</h1>
            {% if not auth %}
            <p>
                You must <a href="{{ urlFor('register') }}">register</a> before submitting documents for review.
            </p>
            {% endif %}
            <p>
                This web application allows students to submit course-related documentation for review and approval by faculty (instructors or advisors). Example scenarios requiring review include:
            </p>
                <ul>
                    <li>Transfer Credit Approval</li>
                    <li>Study Plan Approval</li>
                    <li>Course Prerequisite Waiver</li>
                </ul>
            <p>Students can search for available document queues by course or advisor.</p>
        </div>
    </div>
</div>
{% endblock %}
