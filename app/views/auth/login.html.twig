{% extends 'templates/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line">Login</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal" role="form" action="{{ urlFor('login.post') }}" method="post" autocomplete="off">
            <div class="container">
                <div class="form-group row{% if errors.first('email') %} has-error has-feedback{% endif %}">
                    <label class="control-label col-sm-1" for="email">Email</label>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter email"{% if request.post('email') %} value="{{ request.post('email') }}"{% endif %}>
                        </div>
                    </div>
                     <div class="col-sm-7">
                        {% if errors.first('email') %}
                        <span class="help-block">{{ errors.first('email') }}</span>
                        {% endif %}
                    </div>
               </div>
                <div class="form-group row{% if errors.first('password') %} has-error has-feedback{% endif %}">
                    <label class="control-label col-sm-1" for="password">Password</label>
                    <div class="col-sm-4">                
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Enter password">
                        </div>
                    </div>
                    <div class="col-sm-7">
                        {% if errors.first('password') %}
                        <span class="help-block">{{ errors.first('password') }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-3">
                        <a href="{{ urlFor('register') }}" type="button" class="btn btn-default"><span class="fa fa-pencil-square-o fa-lg fa-fw"></span> Register</a>                
                    </div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-default">Login</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
