{% extends 'templates/base.html.twig' %}

{% block title %}Course Item Submission{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line"><span class="glyphicon glyphicon-book"></span>Submit Course Item: {{ course.name }} </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form class="form-horizontal" id="courseItemSubmissionForm" role="form" method="post" action="{{ urlFor('saveCourse') }}">
                <div class="form-group">
                    <input type="hidden" name="courseId" id="courseId" value="{{ course.id_course }}" />
                    <label class="control-label col-sm-4" style="padding-top:0px;" for="name">Reason</label>
                    <div class="col-sm-8">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Enter reason for enrollment override" value="{{ course.name }}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" style="padding-top:0px;" for="section">Section</label>
                    <div class="col-sm-8">
                    <textarea class="form-control" rows="3" name="section" id="section" placeholder="Enter course secion">{{ course.description }}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <span class="control-label col-sm-2" style="padding-top:0px;"><b>Documents</b></span>
                    <input class="form-control" type="hidden" id="doctotal" name="doctotal" value="0"/>
                    <div class="col-sm-10">
                        <div class="row clearfix">
                            <div class="col-md-12 column">
                                <table class="table table-bordered table-hover" id="tab_logic">
                                    <thead>
                                        <tr >
                                            <th class="text-center">
                                                #
                                            </th>
                                            <th class="text-center">
                                                Name
                                            </th>
                                            <th class="text-center">
                                                Description
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr id='doc0'></tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <a id="add_row" class="btn btn-default pull-left">Add Document</a><a id='delete_row' class="pull-right btn btn-default">Remove Document</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-9 col-sm-3">
                        <div class="btn-toolbar pull-right" role="toolbar">
                            <a href="{{ urlFor('admin.courses') }}" role="button" class="btn btn-danger">Cancel</a>
                            <button type="submit" class="btn btn-success" id="submit">Save</button>
                        </div>
                    </div>                         
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
{% endblock %}
