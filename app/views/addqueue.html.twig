{% extends 'templates/base.html.twig' %}

{% block title %}New Queue{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line"><span class="fa fa-list-alt"></span> Create Document Queue for {% if type == 'user' %}{{ auth.first_name }} {{ auth.last_name }}{% elseif type == 'course' %}{{ course.name }}{% endif %}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <form class="form-horizontal" id="addQueueForm" role="form" method="post" action="{{ urlFor('savequeue', {type: type, id: id}) }}">
            {% if course %}
                <input type="hidden" name="courseid" id="courseid" value="{{ course.id_course }}"/>
            {% endif %}
                <div class="form-group">
                    <label class="control-label col-sm-2" style="padding-top:0px;" for="enabled">Enabled</label>
                    <div class="col-sm-8">
                    <div class="checkbox">
                        <label><input type="checkbox" name="enabled" value="1" checked=""></label>
                    </div>
                    <span class="help-block">Leave checked if you want to enable this queue for submissions.</span>
                </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="padding-top:0px;" for="name">Name</label>
                    <div class="col-sm-8">
                    <input type="text" class="form-control" name="name" id="name" placeholder="Enter queue name">
                    <span class="help-block">e.g. Study Plan, Course Prerequisitie Approval, etc.</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2" style="padding-top:0px;" for="description">Description</label>
                    <div class="col-sm-8">
                    <textarea class="form-control" rows="3" name="description" id="description" placeholder="Enter description"></textarea>
                    <span class="help-block">Describe the purpose of this queue.</span>
                    </div>
                </div>
                <div class="form-group">
                    <span class="control-label col-sm-2" style="padding-top:0px;"><b>Documents</b></span>
                    <input class="form-control" type="hidden" id="doctotal" name="doctotal" value="0"/>
                    <div class="col-sm-10">
                        <div class="row clearfix">
                            <div class="col-md-12 column">
                                <table class="table table-bordered table-hover" id="tab_logic">
                                    <thead>
                                        <tr >
                                            <th class="text-center">
                                                #
                                            </th>
                                            <th class="text-center">
                                                Name
                                            </th>
                                            <th class="text-center">
                                                Description
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr id='doc0'></tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <a id="add_row" class="btn btn-default pull-left">Add Document</a><a id='delete_row' class="pull-right btn btn-default">Remove Document</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-9 col-sm-3">
                    <div class="btn-toolbar pull-right" role="toolbar">
                        <a href="{{ urlFor('home') }}" role="button" class="btn btn-danger">Cancel</a>
                        <button type="submit" class="btn btn-success" id="submit">Save</button>
                    </div>
                    </div>                         
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
{% endblock %}
{% block script %}
    <script type="text/javascript">
        $(document).ready(function(){
            var i = parseInt($("#doctotal").val());
            $("#add_row").click(function(){
                $('#doc'+i).html("<td>"+ (i+1) +"</td><td><input name='name"+i+"' type='text' placeholder='Name' class='form-control input-md'/> </td><td><input name='description"+i+"' type='text' placeholder='Description' class='form-control input-md'></td>");

                $('#tab_logic').append('<tr id="doc'+(i+1)+'"></tr>');
                i++;
                $("#doctotal").val(i);
            });

            $("#delete_row").click(function(){
                if(i>=0){
                    $("#doc"+(i-1)).html('');
                    i--;
                    $("#doctotal").val(i);
                }
            });
        });
    </script>
{% endblock %}